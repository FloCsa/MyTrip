<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#06a995" android:centerColor="@android:color/transparent" android:endColor="#000" android:angle="45"></gradient>
            <corners android:radius="5dp"></corners>
            <stroke android:width="2dp" android:color="#5987cd"></stroke>
            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp"></padding>
        </shape>

    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#fff" android:centerColor="@android:color/transparent" android:endColor="#06a995" android:angle="45"></gradient>
            <corners android:radius="5dp"></corners>
            <stroke android:width="2dp" android:color="#5987cd"></stroke>
            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp"></padding>
        </shape>

    </item>
</selector>